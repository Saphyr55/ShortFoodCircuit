<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.beans.property.SimpleDoubleProperty?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import java.lang.Double?>
<fx:root type="HBox" xmlns="http://javafx.com/javafx/19"
         xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="fr.sfc.controller.productTour.ProductTourFrameController">
    <fx:define>
        <Font fx:id="defaultFont" size="20" name="Arial"/>
    </fx:define>
    <fx:define>
        <SimpleDoubleProperty fx:id="textFieldWidth">
            <value>
                <Double fx:value="0"/>
            </value>
        </SimpleDoubleProperty>
    </fx:define>
    <fx:define>
        <SimpleDoubleProperty fx:id="textFieldHeight">
            <value>
                <Double fx:value="0"/>
            </value>
        </SimpleDoubleProperty>
    </fx:define>
    <VBox fx:id="containerNameTextField" prefHeight="142.0" prefWidth="83.0">

        <TextField prefWidth="${controller.textFieldWidth}"
                   prefHeight="${controller.textFieldHeight}"
                   disable="true"
                   font="$defaultFont"
                   text="name"/>

        <TextField prefWidth="${controller.textFieldWidth}"
                   prefHeight="${controller.textFieldHeight}"
                   disable="true"
                   font="$defaultFont"
                   text="Start date"/>

        <TextField prefWidth="${controller.textFieldWidth}"
                   prefHeight="${controller.textFieldHeight}"
                   disable="true"
                   font="$defaultFont"
                   text="End date"/>

        <TextField prefWidth="${controller.textFieldWidth}"
                   prefHeight="${controller.textFieldHeight}"
                   disable="true"
                   font="$defaultFont"
                   text="Weight"/>

        <TextField prefWidth="${controller.textFieldWidth}"
                   prefHeight="${controller.textFieldHeight}"
                   disable="true"
                   font="$defaultFont"
                   text="SIRET Company"/>

        <TextField prefWidth="${controller.textFieldWidth}"
                   prefHeight="${controller.textFieldHeight}"
                   disable="true"
                   font="$defaultFont"
                   text="Matriculation"/>

        <VBox>
            <Button fx:id="buttonFinish"
                    font="$defaultFont"
                    onAction="#EventButtonAddProductToursFinishAction"
                    text="Finish"/>
        </VBox>
    </VBox>
    <VBox fx:id="containerTextField">

        <TextField fx:id="tFName"
                   font="$defaultFont"
                   prefWidth="${controller.textFieldWidth}"
                   prefHeight="${controller.textFieldHeight}"/>

        <DatePicker fx:id="startDate"
                    prefWidth="${controller.textFieldWidth}"
                    prefHeight="${controller.textFieldHeight}"/>

        <DatePicker fx:id="endDate"
                    prefWidth="${controller.textFieldWidth}"
                    prefHeight="${controller.textFieldHeight}"/>

        <TextField fx:id="tFWeight"
                   font="$defaultFont"
                   prefWidth="${controller.textFieldWidth}"
                   prefHeight="${controller.textFieldHeight}"/>

        <TextField fx:id="tfSIRETCompany"
                   font="$defaultFont"
                   prefWidth="${controller.textFieldWidth}"
                   prefHeight="${controller.textFieldHeight}"
                   promptText="need"/>

        <TextField fx:id="tFMatriculation"
                   font="$defaultFont"
                   prefWidth="${controller.textFieldWidth}"
                   prefHeight="${controller.textFieldHeight}"
                   promptText="need"/>

        <Label fx:id="labelError"
               font="$defaultFont"
               textFill="RED"/>
    </VBox>
</fx:root>
